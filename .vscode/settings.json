{
    "files.exclude": {
        //"**/.vscode": true,
        //"**/.trash": true,
        "**/.gitattributes": true,
        "**/.gitignore": true,
        "**/.npmignore": true,
        "**/.npmrc": true,
        "**/.coverage": true,
        "**/node_modules": true,
        "**/package-lock.json": true,
        "**/package.json": true,
        //"**/test.js": true,
        "**/README.md": true,
        "**/LICENSE": true,
        "**/*.lnk": true,
    },
    
    "files.autoSave": "onFocusChange",
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
    
    "[javascript]": {
        "editor.tabSize": 2
    },

    // doesn't seem to work
    // "[json]": {
    //     "editor.tabSize": 2
    // },

    // see: https://github.com/Microsoft/vscode/issues/47299 
    "javascript.suggestionActions.enabled": false,
    "cSpell.words": [
      "decapitalize",
      "deref",
      "fifos",
      "get",
      "get hashcode",
      "hashcode",
      "iface",
      "inode",
      "irents",
      "kingjs",
      "linq",
      "pojo"
    ],
}